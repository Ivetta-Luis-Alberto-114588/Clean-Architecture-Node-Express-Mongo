# .npmrc - Configuración para npm install
# Optimización para deployment en Render.com

# Configuraciones generales
audit-level=moderate
fund=false
progress=false

# Configuraciones para dependencias nativas/binarias
optional=true
save-optional=true

# Configuración para onnxruntime-node en caso de falla
# Si la instalación falla, no abortar todo el proceso
strict-optional=false

# Timeout más largo para dependencias que requieren descarga de binarios
fetch-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Cache configuración
cache-max=10800

# Configuración para environment CI/CD
production=false
